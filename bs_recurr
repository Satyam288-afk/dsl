import time

def binary_search_recursive(arr, target, low, high, step=1):
    if low > high:
        print(f"{target} not found in array.")
        return -1

    print(f"Step {step}: Searching in {arr[low:high+1]}")
    mid = (low + high) // 2

    if arr[mid] == target:
        print(f"Found {target} at index {mid}")
        return mid
    elif arr[mid] < target:
        return binary_search_recursive(arr, target, mid + 1, high, step + 1)
    else:
        return binary_search_recursive(arr, target, low, mid - 1, step + 1)


arr_input = input("Enter sorted array elements (space-separated): ")
arr = list(map(int, arr_input.strip().split()))

target = int(input("Enter the target value to search: "))

print("\n=== Recursive Binary Search ===")
start_time = time.time()

binary_search_recursive(arr, target, 0, len(arr) - 1)

end_time = time.time()
elapsed_time = end_time - start_time

print(f"\nTime taken: {elapsed_time:.6f} seconds")
